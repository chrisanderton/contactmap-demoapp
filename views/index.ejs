<!DOCTYPE html>
<html>
  <head>
    <style type="text/css">
      html, body, #map-canvas { height: 100%; margin: 0; padding: 0;}
    </style>
    <script type="text/javascript"
      src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB0ymRb6jQAsgtoUnMO10-x6CjUe0PZK88">
    </script>
    <script type="text/javascript">
      function initialize() {
        var mapOptions = {
          center: { lat: 39.8282, lng: -98.5795},
          zoom: 5
        };
        var map = new google.maps.Map(document.getElementById('map-canvas'),
            mapOptions);

        function addMarker(poi) {
          var marker = new google.maps.Marker({
              position: {lat: poi.lat, lng: poi.lon},
              map: map,
              title: null
          });
          var infowindow = new google.maps.InfoWindow({
              content: unescape(poi.name)
          });
          infowindow.open(map,marker);
        }

        <% pois.forEach(function(poi) { %>
          addMarker(JSON.parse('<%- JSON.stringify(poi) %>'));
        <% }); %>

        setTimeout(function() {
          map.setCenter({lat: 39.8282, lng: -98.5795});
        }, 800);
      }
      google.maps.event.addDomListener(window, 'load', initialize);
    </script>
  </head>
  <body>
    <div id="map-canvas"></div>
    <div>
  </body>
</html>